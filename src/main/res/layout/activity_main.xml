<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X: \nY: \nZ:"
        android:textColor="@color/green"
        android:id="@+id/acceleration"
        />

    <Button
        android:id="@+id/basla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acceleration"
        android:layout_centerHorizontal="true"
        android:onClick="tiklanma"
        android:text="Başla" />

    <Button
        android:id="@+id/bitir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basla"
        android:layout_centerHorizontal="true"
        android:onClick="tiklanma"

        android:text="Bitir" />

    <Button
        android:id="@+id/hedef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bitir"
        android:onClick="tiklanma"
        android:layout_centerHorizontal="true"
        android:text="Hedef Belirle" />

    <Button
        android:id="@+id/geçmişi_göster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:onClick="tiklanma"

        android:text="Geçmişi Göster" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/green"
        android:text="Adım Sayaca Hoş Geldin Janim" />


</RelativeLayout>